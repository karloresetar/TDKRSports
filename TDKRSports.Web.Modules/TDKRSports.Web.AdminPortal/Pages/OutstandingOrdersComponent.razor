@page "/outstandingorders"
@page "/admin"

@using TDKRSports.CoreBusiness.Models
@using TDKRSports.UseCases.AdminPortal.OutstandingOrdersScreen
@using TDKRSports.Web.AdminPortal.Controls
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

@inject IViewOutstandingOrdersUseCase viewOutstandingOrdersUseCase

<h3>Outstanding Orders</h3>
<br />
<OrderListComponent Orders="orders"></OrderListComponent>

@code {
    private IEnumerable<Order> orders;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        orders = viewOutstandingOrdersUseCase.Execute();
    }
}
